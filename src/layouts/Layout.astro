---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import  SpeedInsights  from "@vercel/speed-insights/astro"
const {
  pageTitle = "Stefaan Davis | Portfolio ðŸš€",
  description = "Showcasing scalable cloud-native systems, generative AI projects, and Machine learning applications.",
  ogimage = {
    url: "/thumbnail.png",
    alt: "Thumbnail preview of Stefaan Davis Portfolio",
  }
} = Astro.props;

const siteUrl = new URL(Astro.url).origin;
const SEO = {
  sitename: "Stefaan Davis | Portfolio",
  url: "https://stefodan21.github.io",
  locale: "en_US",
  author: "Stefaan Davis",
};


const twitterimage = `${siteUrl}${ogimage.url}`;
---

<html
  lang="en"
  class="dark:bg-[#0E0E11] bg-mint-50/5 font-montserrat scroll-smooth"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <!-- Favicon for different platforms -->
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />


    <!-- Web manifest -->
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="description" content={description} />
    <meta name="author" content={SEO.author} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`${Astro.site}${Astro.url.pathname}`}>
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://stefodan21.github.io/thumbnail.png" />
    <meta property="og:image:alt" content="Thumbnail preview of Stefaan Davis Portfolio" />
    <meta property="og:url" content={SEO.url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SEO.sitename} />
    <meta property="og:locale" content={SEO.locale} />

    <!-- Microsoft Clarity tracking code: monitors user interactions for analytics -->
    <script type="text/javascript">
      (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", "ta4h1bkr9c");
    </script>
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=gaId`}></script>
    <script>
    const gaId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', gaId);
    </script>


    <meta name="theme-color" content="#0E0E11"/>

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
  </head>
  <body class="overflow-x-hidden">
    <SpeedInsights/>
    <div class="blur-circle"></div>
    <div
      style="  background:linear-gradient(45deg, rgba(96, 155, 250, 0) 10.79%, rgba(96, 170, 250, 0.03) 40.92%, rgba(96, 155, 250, 0) 90.35%)"
      class="fixed top-0 left-0 w-full h-full pointer-events-none -z-1"
    >
    </div>
    <Header />

    <div class="min-h-[85vh] ">
      <slot />
    </div>

    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
